<p id="notice"><%= notice %></p>

<h2>
  <%= @style.name %>
</h2>

<quote>
  <%= @style.description %>
</quote>

<h4>beers</h4>

<ul>
  <% @style.beers.each do |beer| %>
  <li>
    <%= link_to beer.name, beer %> by <%= link_to beer.brewery.name, beer.brewery %>
  </li>
  <% end %>
</ul>

<% if current_user %>
  <%= link_to 'Edit', edit_style_path(@style) %> <td>
  <%= link_to 'Destroy', @style, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>