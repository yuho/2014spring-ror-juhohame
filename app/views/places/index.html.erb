<h1>Beer places search</h1>

<emph><%= notice %></emph>

<%= form_tag places_path do %>
  city <%= text_field_tag :city, params[:city] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @places %>
	<table>
		<thead>
			<% Place.rendered_fields.each do |f| %>
				<td><%=f%></td>
			<% end %>
		</thead>
		<% @places.each do |p| %>
			<tr>
				<% Place.rendered_fields.each do |f| %>
					<% if f.to_s == "name" %>
						<td><%= link_to(p.send(f), "places/#{p.send("id")}?city=#{p.city}") %></td>
					<% else %>
						<td><%= p.send(f) %></td>
					<%end%>
				<% end %>
			</tr>
		<% end %>
	</table>
<% end %>
